<h1>Categories</h1>
<ul>
  <% @categories.each do |category| %>
  <li>
    <%= link_to category.name, category_path(category) %>
    <%= link_to 'Delete', category_path(category), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </li>
  <% end %>
</ul>

<%= link_to 'New Category', new_category_path %>
